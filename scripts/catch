import argparse
import uuid
from astropy.table import Table
from catch import Catch, Config

sources = list(Catch.SOURCES.keys()) + ['any']

parser = argparse.ArgumentParser('catch')
parser.add_argument('desg')
parser.add_argument(
    '--source', default='any', choices=sources,
    help='Search this observation source')
parser.add_argument(
    '--cached', default=True, type=bool,
    help='Use cached results (default True)')
parser.add_argument(
    '--config', help='CATCH configuration file')

args = parser.parse_args()

rows = []
with Catch(Config.from_args(args), save_log=True) as catch:
    job_id = uuid.uuid4()
    count = catch.query(args.desg, job_id, source=args.source, cached=args.cached,
                        eph_source='jpl')
    for row in catch.caught(job_id):
        r = {}
        for table in row:
            for k in table.__table__.columns.keys():
                r[k] = getattr(table, k)
        rows.append(r)

if rows == []:
    print('# none found')
else:
    tab = Table(rows=rows)
    tab.pprint(-1, -1)
